import java.util.*;
public class Main{
    public static void main(String[] args){
        System.out.print("Enter the number ");
        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        int rev = 0;
        int rem;
        while(n>0){
            rem = n%10;
            rev = (rev * 10) + rem;
            n = n/10;
        }
        System.out.print("Reverse of number is " + rev);
    }
}
